<%= form_with(model: presentation_event, html: { class: "presentation-event-form" }) do |form| %>
  <caption><h2>Edit Presentation</h2></caption>
  <% if presentation_event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(presentation_event.errors.count, "error") %> prohibited this presentation_event from being saved:</h2>

      <ul>
        <% presentation_event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :date %>
    <%= form.date_field :date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 10, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= form.submit "Update Presentation", class: "bux-button" %>
    <%= link_to "Cancel", presentation_event_path(presentation_event), class: "bux-button bux-button--alt" %>
  </div>
<% end %>
